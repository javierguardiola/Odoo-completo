    </field>
</record>

<!-- add studens search view-->

<record id="students_search" model="ir.ui.view">
    <field name="name">Students.search</field>
    <field name="model">prueba.student</field>
    <field name="arch" type="xml">
        <search string="Students">
            <field name="name"/>
            <field name="age"/>
        </search>
    </field>
</record>

<!-- add prueba root menu menuitem-->
<menuitem id="prueba_menu" name="Prueba" sequence="10"/>
<!-- add studens menu -->  
<menuitem
    id="students_menu"
    name="Students"
    parent="prueba_menu"
    action="students_action"/>
    
<!-- add teacher menu -->
<menuitem
    id="teachers_menu"
    name="Teachers"
    parent="prueba_menu"
    action="teachers_action"/>

<!-- add course menu -->
<menuitem
    id="courses_menu"
    name="Courses"
    parent="prueba_menu"
    action="courses_action"/>
  
<!-- add asignature menu -->
<menuitem
    id="asignatures_menu"
    name="Asignatures"
    parent="prueba_menu"
    action="asignatures_action"/>
</odoo>